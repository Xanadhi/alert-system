<p id="notice"><%= notice %></p>

<h1>Listing Weather Alerts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_alerts.each do |weather_alert| %>
      <tr>
        <td><%= link_to 'Show', weather_alert %></td>
        <td><%= link_to 'Edit', edit_weather_alert_path(weather_alert) %></td>
        <td><%= link_to 'Destroy', weather_alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

